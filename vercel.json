{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "cd frontend && npm ci --prefer-offline --no-audit && npm run build",
        "installCommand": "cd frontend && npm install --prefer-offline --no-audit"
      }
    },
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "buildCommand": "cd backend && pip install --no-cache-dir --no-deps -r requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "backend",
    "NODE_ENV": "production",
    "NPM_CONFIG_PRODUCTION": "false",
    "NPM_CONFIG_LOGLEVEL": "error"
  }
} 